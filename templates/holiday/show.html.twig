{% extends 'base.html.twig' %}

{% block title %}Holiday{% endblock %}

{% block body %}
    <h1>Holiday</h1>
    <a href="{{ path('app_holiday_edit', {'id': holiday.id}) }}" class="btn btn-outline-warning">
        Edit <i class="fa-solid fa-pen-to-square"></i>
    </a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ holiday.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ holiday.type }}</td>
            </tr>
            <tr>
                <th>Beginning</th>
                <td>{{ holiday.beginning ? holiday.beginning|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ holiday.end ? holiday.end|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_general_constraints_index') }}" class="mt-3 mb-3 btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Back to list
    </a>

    {{ include('holiday/_delete_form.html.twig') }}
{% endblock %}
