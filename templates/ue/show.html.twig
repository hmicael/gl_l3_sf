{% extends 'base.html.twig' %}

{% block title %}UE{% endblock %}

{% block body %}
    <h1>UE</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ u_e.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ u_e.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ u_e.startDate ? u_e.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbStudent</th>
                <td>{{ u_e.nbStudent }}</td>
            </tr>
            <tr>
                <th>NbGroup</th>
                <td>{{ u_e.nbGroup }}</td>
            </tr>
            <tr>
                <th>ConstraintsApplied</th>
                <td>{{ u_e.constraintsApplied ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Semester</th>
                <td>{{ u_e.semester }}</td>
            </tr>
            <tr>
                <th>Filiere</th>
                <td>{{ u_e.filiere ? u_e.filiere|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_u_e_index') }}">back to list</a>

    <a href="{{ path('app_u_e_edit', {'id': u_e.id}) }}">edit</a>

    {{ include('ue/_delete_form.html.twig') }}
{% endblock %}
