{% extends 'base.html.twig' %}

{% block title %}UE{% endblock %}

{% block body %}
    <h1>UE</h1>

    <a href="{{ path('app_ue_edit', {'id': ue.id}) }}" class="mb-3 btn btn-outline-warning">
        Edit <i class="fa-solid fa-pen-to-square"></i>
    </a>

    {{ include('ue/_delete_form.html.twig') }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ue.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ue.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ ue.startDate ? ue.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Number of students</th>
                <td>{{ ue.nbStudent }}</td>
            </tr>
            <tr>
                <th>Number of groups</th>
                <td>{{ ue.nbGroup }}</td>
            </tr>
            <tr>
                <th>Number of courses</th>
                <td>{{ ue.nbCours }}</td>
            </tr>
            <tr>
                <th>Number of TD</th>
                <td>{{ ue.nbTD }}</td>
            </tr>
            <tr>
                <th>Number of TP</th>
                <td>{{ ue.nbTP }}</td>
            </tr>
            <tr>
                <th>Constraints Applied</th>
                <td>{{ ue.constraintsApplied ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Semester</th>
                <td>{{ ue.semester }}</td>
            </tr>
            <tr>
                <th>Filiere</th>
                <td>{{ ue.filiere ? ue.filiere|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    <a href="{{ path('app_ue_index') }}" class="mt-3 btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Back to list
    </a>
{% endblock %}
