{% extends 'base.html.twig' %}

{% block title %}UE index{% endblock %}

{% block body %}
    <h1>UE index</h1>
    <a href="{{ path('app_ue_new') }}" class="btn btn-outline-primary">
        <i class="fa-sharp fa-regular fa-plus"></i>
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>NbStudent</th>
                <th>NbGroup</th>
                <th>ConstraintsApplied</th>
                <th>Semester</th>
                <th>Filiere</th>
                <th>Teacher</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ue in ues %}
            <tr>
                <td>{{ ue.id }}</td>
                <td>{{ ue.name }}</td>
                <td>{{ ue.startDate ? ue.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ ue.nbStudent }}</td>
                <td>{{ ue.nbGroup }}</td>
                <td>{{ ue.constraintsApplied ? 'Yes' : 'No' }}</td>
                <td>{{ ue.semester }}</td>
                <td>{{ ue.filiere ? ue.filiere|join(', ') : '' }}</td>
                <td>{{ ue.teacher }}</td>
                <td>
                    <a href="{{ path('app_ue_show', {'id': ue.id}) }}">show</a>
                    <a href="{{ path('app_ue_edit', {'id': ue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
