{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cour.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ cour.type }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ cour.duration }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ cour.position }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cours_index') }}" class="mt-3 btn btn-outline-secondary"><i class="fa-solid fa-arrow-left"></i> Back to list</a>

    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}" class="btn btn-outline-warning">Edit <i class="fa-solid fa-pen-to-square"></i></a>

    {{ include('cours/_delete_form.html.twig') }}
{% endblock %}
