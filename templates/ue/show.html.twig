{% extends 'base.html.twig' %}

{% block title %}UE{% endblock %}

{% block body %}
    <section>
        <h1>{{ ue.name }}</h1>

        <a href="{{ path('app_ue_edit', {'id': ue.id}) }}" class="mb-3 btn btn-outline-warning">
            Edit <i class="fa-solid fa-pen-to-square"></i>
        </a>

        {{ include('ue/_delete_form.html.twig') }}

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ue.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ ue.name }}</td>
                </tr>
                <tr>
                    <th>StartDate</th>
                    <td>{{ ue.startDate ? ue.startDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Number of students</th>
                    <td>{{ ue.nbStudent }}</td>
                </tr>
                <tr>
                    <th>Number of groups</th>
                    <td>{{ ue.nbGroup }}</td>
                </tr>
                <tr>
                    <th>Number of courses</th>
                    <td>{{ ue.nbCours }}</td>
                </tr>
                <tr>
                    <th>Number of TD</th>
                    <td>{{ ue.nbTD }}</td>
                </tr>
                <tr>
                    <th>Number of TP</th>
                    <td>{{ ue.nbTP }}</td>
                </tr>
                <tr>
                    <th>Constraints Applied</th>
                    <td>{{ ue.constraintsApplied ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Semester</th>
                    <td>{{ ue.semester }}</td>
                </tr>
                <tr>
                    <th>Filiere</th>
                    <td>{{ ue.filiere ? ue.filiere|join(', ') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </section>
    <hr>
    <section>
        <h1>List of Courses</h1>
        <a href="{{ path('app_cours_new', {'id' : ue.id} ) }}" class="btn btn-outline-primary">
            <i class="fa-sharp fa-regular fa-plus"></i>
        </a>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Duration</th>
                    <th>Position</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cour in ue.cours %}
                <tr>
                    <td>{{ cour.id }}</td>
                    <td>{{ cour.name }}</td>
                    <td>{{ cour.type }}</td>
                    <td>{{ cour.duration }}</td>
                    <td>{{ cour.position }}</td>
                    <td>
                        <a href="{{ path('app_cours_show', {'id' : ue.id, 'courId': cour.id}) }}" class="btn btn-outline-primary">
                            Show <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="{{ path('app_cours_edit', {'id' : ue.id, 'courId': cour.id}) }}" class="btn btn-outline-warning">Edit <i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
    <a href="{{ path('app_ue_index') }}" class="mt-3 btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Back to list
    </a>
{% endblock %}
