{% extends 'base.html.twig' %}

{% block title %}UE index{% endblock %}

{% block body %}
    <h1>UE index</h1>
    <a href="{{ path('app_ue_new') }}" class="btn btn-outline-primary">
        <i class="fa-sharp fa-regular fa-plus"></i>
    </a>
    <section class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>StartDate</th>
                    <th>NbStudent</th>
                    <th>NbGroup</th>
                    <th>ConstraintsApplied</th>
                    <th>Semester</th>
                    <th>Filieres</th>
                    <th>Teacher</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ue in ues %}
                <tr>
                    <td>{{ ue.id }}</td>
                    <td>{{ ue.name }}</td>
                    <td>{{ ue.startDate ? ue.startDate|date('Y-m-d') : '' }}</td>
                    <td>{{ ue.nbStudent }}</td>
                    <td>{{ ue.nbGroup }}</td>
                    <td>{{ ue.constraintsApplied ? 'Yes' : 'No' }}</td>
                    <td>{{ ue.semester }}</td>
                    <td>{{ ue.filieres ? ue.filieres|join(', ') : '' }}</td>
                    <td>{{ ue.teacher }}</td>
                    <td>
                        <a href="{{ path('app_ue_show', {'id': ue.id}) }}" class="btn btn-outline-primary">Show <i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('app_ue_edit', {'id': ue.id}) }}" class="btn btn-outline-warning">Edit <i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
